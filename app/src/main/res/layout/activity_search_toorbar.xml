<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_toorbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.lenovo.yijiantable.SearchToorbar">

    <TextView
        android:id="@+id/txv_select"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/tab_toolbar_bg"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/tab_toolbar_select"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/select"
        android:textColor="@color/mainColorWhite"
        android:textSize="12sp"
        android:textAlignment="gravity"/>

    <TextView
        android:id="@+id/txv_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/tab_toolbar_bg"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/tab_toolbar_search"
        android:gravity="center"
        android:padding="5dp" />

</LinearLayout>
